<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h3 class="h2">작업현장</h3>

    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button class="btn btn-sm btn-outline-secondary">?</button>
        </div>
    </div>
</div>    

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/worksite">홈</a></li>
                    <li class="breadcrumb-item active">새 작업현장</li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b>worksite</b>
        </div>
    </div>
</div>

<form action="/worksite/post" method="POST">

    <div class="row form-group mb-4">

        <div class="col">
            <label for="name">현장명</label>
            <input type="text" class="form-control" id="name" name="name" value="" placeholder="Name">
        </div>

        <div class="col">
            <label for="address">상세주소</label>
            <input type="text" class="form-control" id="address" name="address" value="" placeholder="address"
            required>
        </div>
    </div>
<!-- 성별 -->
    <div class="row form-group mb-4">

        <div class="col">
            <label for="local">소재지</label>
            <input type="text" class="form-control" id="local" name="local" value="" placeholder="Local"
            required>
        </div>
<!-- 주민번호 -->
        <div class="col">
            <label for="salary">급여</label>
            <input type="text" class="form-control" id="salary" name="salary" value="" placeholder="salary"
            required>
        </div>
    </div>
<!-- 전화번호 -->
    <div class="row form-group mb-4">

        <div class="col">
            <label for="worktype">업종</label>
            <input type="text" class="form-control" id="worktype" name="worktype" value="" placeholder="worktype"
            required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="date">날짜</label>
            <input type="text" class="form-control" id="date" name="date" value="" placeholder="date"
            >
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="hour">작업시간</label>
            <input type="text" class="form-control" id="hour" name="hour" value="" placeholder="hour"
            required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="nopr">필요인원</label>
            <input type="text" class="form-control" id="nopr" name="nopr" value="" placeholder="nopr"
            required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="worksitenote">현장설명</label>
            <input type="text" class="form-control" id="worksitenote" name="worksitenote" value="" placeholder="worksitenote"
            required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <button type="submit" class="btn btn-primary">작업현장 추가하기</button>
    </div>
</form>