<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h3 class="h2">등록된 현장 목록</h3>

    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="/worksite/add" class="btn btn-sm btn-outline-secondary">+ New Worksite</a>
        </div>
    </div>
</div>    

<% messages.forEach(element => { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= element %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% }) %>

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">현장명</th>
                <th scope="col">주소</th>
                <th scope="col">소재지</th>
                <th scope="col">급여</th>
                <th scope="col">업무</th>
                <th scope="col">날짜</th>
                <th scope="col">근무시간</th>
                <th scope="col">필요인원</th>
                <th scope="col">작성일(수정일)</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>

        <tbody>
            <% worksites.forEach(element => { %>
             <tr class="align-middle">
                <td><%= element.name %></td>
                <td><%= element.address %></td>
                <td><%= element.local %></td>
                <td><%= element.salary %></td>
                <td><%= element.worktype %></td>
                <td><%= moment(element.date).format("YYYY년 MMMM Do a hh:mm") %></td>
                <td><%= moment(element.end).diff(element.date, 'hour') %>시간</td>
                <td><%= element.hired.length %> / <%= element.nopr %></td>
                <td><%= moment(element.updateAt).format("YYYY년 MMMM Do a hh:mm") %></td>
                <td class="text-end">

                    <div class="d-flex flex-row justify-content-end gap-2">

                        <a href="/worksite/<%= element._id %>" type="button" class="btn btn-primary btn-small">
                            <i class="bi bi-eye"></i>
                        </a>

                        <!-- <a href="/edit/<%= element._id %>" type="button" class="btn btn-warning btn-small">
                            <i class="bi bi-pencil"></i>
                        </a> -->

                        <form action="/edit/<%= element._id %>?_method=DELETE" method="POST" class="position-relative">
                            <button type="submit" class="btn btn-danger btn-small">
                                <i class="bi bi-person-x"></i>
                            </button>
                        </form>
                            
                    </div>
                </td>
             </tr>
            <% }) %>
        </tbody>

    </table>

</div>

<% if (worksites.length > 0) { %>
    <nav aria-label="Worksite Pagination">
        <ul class="pagination justify-content-center mt-5">

            <% if (current == 1) { %>
                <li class="page-item"><a href="#" class="page-link">First</a></li>
            <% } else { %>
                <li class="page-item"><a href="/worksite/?page=1" class="page-link">First</a></li>
            <% } %>

            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if(i !== 1)  { %>
                <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
            <% } %>

            <% for(; i <= (Number(current) + 4 ) && i <= pages; i++ ) { %>
                <% if (i == current) { %>
                    <li class="page-item disabled"><a href="#" class="page-link"><%= i %></a></li>
                <% } else {%>
                    <li class="page-item"><a href="/worksite/?page=<%= i %>" class="page-link"><%= i %></a></li>
                <% } %>
                <% if (i == Number(current) + 4 && i < pages) { %>
                    <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
                <% } %>
            <% } %>

            <% if (current == pages) { %>
                <li class="page-item disabled"><a href="#" class="page-link">Last</a></li>
            <% } else { %>
                <li class="page-item"><a href="/worksite/?page=<%= pages %>" class="page-link">Last</a></li>
            <% } %>
        </ul>
    </nav>
<% } %>