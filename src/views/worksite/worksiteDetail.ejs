<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h3 class="h2">현재 배정된 근무자</h3>

    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="/matchToWorksite" class="btn btn-sm btn-outline-secondary">+ Hire Employee</a>
        </div>
    </div>
</div>   

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">이름</th>
                <th scope="col">성별</th>
                <th scope="col">사는지역</th>
                <th scope="col">주민번호</th>
                <th scope="col">전화번호</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>

        <tbody>
            <% worksite.hired.forEach(element => { %>
             <tr class="align-middle">
                <td><%= element.name %></td>
                <td><%= element.sex %></td>
                <td><%= element.local %></td>
                <td><%= element.RRN %></td>
                <td><%= element.phonenumber %></td>
                <td class="text-end">

                    <div class="d-flex flex-row justify-content-end gap-2">

                        <a href="/view/<%= element._id %>" type="button" class="btn btn-primary btn-small">
                            <i class="bi bi-eye"></i>
                        </a>

                        <a href="/edit/<%= element._id %>" type="button" class="btn btn-warning btn-small">
                            <i class="bi bi-pencil"></i>
                        </a>

                        <form action="/edit/<%= element._id %>?_method=DELETE" method="POST" class="position-relative">
                            <button type="submit" class="btn btn-danger btn-small">
                                <i class="bi bi-person-x"></i>
                            </button>
                        </form>
                            
                    </div>
                </td>
             </tr>
            <% }) %>
        </tbody>

    </table>

</div>